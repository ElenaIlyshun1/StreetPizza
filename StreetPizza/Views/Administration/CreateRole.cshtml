@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<div class="container">
    <hr class="log-reg-text-line" />

    <div class="row">

        <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">

            <div class="log-reg-block">
                <h2 class="log-reg-title">Administration page</h2>
                <hr class="log-reg-text-line" id="short-line" />
                <p class="log-reg-subtitle">@ViewBag.Title</p>
            </div>

            <div class="log-reg-block-bottom">
                <form method="post" class="register-form">
                    <div class="form-group">
                        <label asp-for="RoleName" class="log-reg-label">
                            Role Name
                        </label>
                        <input asp-for="RoleName" class="log-reg-text" />
                        <span asp-validation-for="RoleName" class="log-reg-valid"></span>
                    </div>
                    <button type="submit" class="btn-first btn-color-first btn-round">Create Role</button>
                    <a asp-controller="Administration" asp-action="ListRoles"
                       class="btn-first btn-color-second btn-round">Cancel</a>
                </form>
            </div>

        </div>

    </div>

    <hr class="log-reg-text-line" />
</div>
