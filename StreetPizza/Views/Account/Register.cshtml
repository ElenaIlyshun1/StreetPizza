@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="log-reg-page">
    <div class="container">
        <hr class="log-reg-text-line" />
       
        <div class="row justify-content-around" id="log-reg-body">

            <div class="col-md-3">
                <div class="log-reg-title-block">
                    <a class="log-reg-title link" asp-area="" asp-controller="Account" asp-action="Login">
                        Sign in
                        <hr class="log-reg-text-line" id="short-line" />
                        <p class="log-reg-subtitle">Welcome back!</p>
                        <p class="log-reg-subtitle">Log in to your account!</p>
                    </a>
                </div>
            </div>

            <div class="col-md-1 separator-line">
                <span class="separator-text">or</span>
            </div>

            <div class=" col-md-8">
                <div class="log-reg-title-block">
                    <h2 class="log-reg-title">Sign up</h2>
                    <hr class="log-reg-text-line" id="short-line" />
                    <p class="log-reg-subtitle">Create your own account!</p>
                </div>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <div>
                        <label asp-for="Email">
                            Email <span class="required">*</span>
                        </label>
                        <input asp-for="Email" class="input-text-reg" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password">
                            Password <span class="required">*</span>
                        </label>
                        <input asp-for="Password" class="input-text-reg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ConfirmPassword">
                            Confirm Password <span class="required">*</span>
                        </label>
                        <input asp-for="ConfirmPassword" class="input-text-reg" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-sign-up">Sign up</button>
                </form>
            </div>

        </div>
        <hr class="log-reg-text-line" />
    </div>
</div>