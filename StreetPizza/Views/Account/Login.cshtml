@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="log-reg-page">
    <div class="container">
        <hr class="log-reg-text-line" />

        <div class="row justify-content-around" id="log-reg-body">

            <div class="col-md-8">
                <div class="log-reg-title-block">
                    <h2 class="log-reg-title">Sign in</h2>
                    <hr class="log-reg-text-line" id="short-line" />
                    <p class="log-reg-subtitle">Welcome back!</p>
                    <p class="log-reg-subtitle">Log in to your account!</p>
                </div>
                <form method="post">
                    <div class="form-fields">
                        <div asp-validation-summary="All" class="log-reg-valid"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="log-reg-label">
                                Email <span class="required">*</span>
                            </label>
                            <input asp-for="Email" class="log-reg-text" />
                            <span asp-validation-for="Email" class="log-reg-valid"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="log-reg-label">
                                Password <span class="required">*</span>
                            </label>
                            <input asp-for="Password" class="log-reg-text" />
                            <span asp-validation-for="Password" class="log-reg-valid"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn-first btn-color-first btn-round">Sign in</button>
                </form>
            </div>

            <div class="col-md-1 separator-line">
                <span class="separator-text">or</span>
            </div>

            <div class="col-md-3">
                <div class="log-reg-title-block">
                    <a class="log-reg-title link"  asp-controller="Account" asp-action="Register">
                        Sign up
                        <hr class="log-reg-text-line" id="short-line" />
                        <p class="log-reg-subtitle">Create your own account!</p>
                    </a>
                </div>
            </div>

        </div>
        <hr class="log-reg-text-line" />
    </div>
</div>