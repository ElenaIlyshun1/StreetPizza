
@{
    ViewData["Title"] = "Index";
}

<div class="log-reg-page">
    <div class="log-reg-body">
        <div class="container">
            <hr class="log-reg-text-line" />
            <span class="or-text">or</span>
            <div class="row" id="customer-login">
                <div class="col-md-6">
                    <h2 class="log-reg-title">Sign in</h2>
                    <hr class="log-reg-text-line" id="short-line" />
                    <form class="form-login">
                        <p class="before-login-text">Welcome back! Log in to your account!</p>
                        <p>
                            <label for="username">Login or Email <span class="required">*</span></label>
                            <input type="text" class="input-text-login" />
                        </p>
                        <p>
                            <label for="password">Password <span class="required">*</span></label>
                            <input type="password" class="input-text-login" />
                        </p>
                        <p>
                            <button class="btn-sign-in">Sign in</button>

                        </p>
                    </form>

                </div>
                <div class="col-md-6 ">
                    <h2 class="log-reg-title">Sign up</h2>
                    <hr class="log-reg-text-line" id="short-line" />
                    <p class="before-register-text">Create your own account!</p>
                    <form class="form-reg">
                        <p>
                            <label for="username">Login <span class="required">*</span></label>
                            <input type="text" class="input-text-reg" />
                        </p>
                        <p>
                            <label for="email">Email <span class="required">*</span></label>
                            <input type="text" class="input-text-reg" />
                        </p>
                        <p>
                            <label for="password">Password <span class="required">*</span></label>
                            <input type="password" class="input-text-reg" />
                        </p>
                    </form>
                        <p>
                            <button class="btn-sign-up">Sign up</button>

                        </p>
                    
                </div>
            </div>
                 <hr class="log-reg-text-line" />
        </div>
    </div>
</div>