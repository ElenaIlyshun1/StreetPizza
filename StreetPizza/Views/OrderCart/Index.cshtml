@model OrderCartViewModel

    <div class="container">
        <table id="cart">
            <thead>
                <tr>
                    <th class="first">Фото</th>
                    <th class="second">Кількість</th>
                    <th class="third">Товар</th>
                    <th class="fourth">Ціна</th>
                    <th class="fifth">&nbsp;</th>
                </tr>
            </thead>
            <tbody class="shopping-cart-table">
                @foreach (var el in Model.orderCart.listOrderItems)
                {
                    <tr class="productitm">
                        <td><img src="~/img/pizza/@el.product.Img" class="thumb"></td>
                        <td><input type="number" value="1" min="0" max="99" class="qtyinput"></td>
                        <td>@el.product.Name</td>
                        <td>@el.product.PriceLarge.ToString("c")</td>
                        <td><span class="remove"><img src="https://i.imgur.com/h1ldGRr.png" alt="X"></span></td>
                    </tr>

                }

                <tr class="totalprice">
                    <td class="light">Total:</td>
                    <td colspan="2">&nbsp;</td>
                    <td colspan="2"><span class="thick">$225.45</span></td>
                </tr>
                <tr class="checkoutrow">
                    <td colspan="5" class="checkout">  <a class="btn btn-first btn-color-first btn-round" asp-controller="Order" asp-action="Checkout">Перейти до оформлення</a></td>
                </tr>
            </tbody>
        </table>   

    </div>

